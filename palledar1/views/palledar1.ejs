      if (!salaiButtonCreated) {
        var salaiButton = document.createElement("button");
        salaiButton.textContent = "Salai";
        salaiButton.classList.add("button");
        salaiButton.classList.add("salai-button");
        
        salaiButton.addEventListener("click", function() {
          window.location.href = "Salai.html";
        });
  
        var container = document.querySelector(".Done");
        container.appendChild(document.createElement("br"));
        container.appendChild(salaiButton);
        salaiButtonCreated = true;
      }
    });
  </script>
  
  
  <div class="addmore">
    <button onclick="addTable()" type="add" id="add"> Add More</button>
    <script>
      function addTable() {
        var originalTable = document.getElementById("originalTable");
        var clonedTable = originalTable.cloneNode(true);

        // Create a delete button
        var deleteButton = document.createElement("button");
        deleteButton.textContent = "Delete";
        deleteButton.classList.add("delete-button");
        deleteButton.addEventListener("click", function () {
          // Remove the table when the delete button is clicked
          clonedTable.remove();
        });

        // Append the delete button to the cloned table
        clonedTable.appendChild(deleteButton);

         // Insert the cloned table above the buttons container
var buttonsContainer = document.getElementById("buttonsContainer");
document.body.insertBefore(clonedTable, buttonsContainer);
      }
    </script>
